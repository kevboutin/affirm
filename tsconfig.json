{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"]
    },
    "tsc-alias": {
        "resolveFullPaths": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
