{
    "name": "affirm",
    "version": "0.0.1",
    "description": "Centralized authentication/authorization services",
    "author": "Kevin Boutin (me@kevinboutin.me)",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/kevboutin/affirm/issues"
    },
    "type": "module",
    "homepage": "https://github.com/kevboutin/affirm#readme",
    "scripts": {
        "audit": "npm audit fix",
        "build": "tsc && tsc-alias",
        "commit-msg": "commitlint --config commitlint.config.js --edit $1",
        "dev": "NODE_ENV=development tsx watch src/index.ts",
        "generate:key-pair": "node generateKeyPair.js",
        "pre-commit": "npm run lint && npm run test:lint",
        "prepare": "git config --local core.hooksPath .githooks",
        "lint": "npx prettier -c **/*.*js",
        "lint:fix": "npx prettier --write **/*.*js",
        "seed:roles": "node seedRoles.js",
        "start": "node ./dist/src/index.js",
        "test": "npm run test:lint && npm run test:unit",
        "test:lint": "npx lint-staged",
        "test:unit": "npx cross-env NODE_ENV=test vitest run --testTimeout=11000 --coverage",
        "typecheck": "tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kevboutin/affirm.git"
    },
    "keywords": [
        "affirm",
        "api",
        "authentication",
        "authorization",
        "auth",
        "hono",
        "api",
        "rest",
        "service",
        "node",
        "nodejs",
        "javascript",
        "typescript"
    ],
    "dependencies": {
        "@hono/node-server": "^1.17.1",
        "@hono/zod-openapi": "^1.0.2",
        "@scalar/core": "^0.3.8",
        "@scalar/hono-api-reference": "^0.9.12",
        "bcrypt": "^6.0.0",
        "dotenv": "^17.2.0",
        "dotenv-expand": "^12.0.2",
        "hono": "^4.8.2",
        "hono-pino": "^0.9.1",
        "hono-rate-limiter": "^0.4.2",
        "jose": "^6.0.11",
        "mongodb-memory-server": "^10.1.4",
        "mongoose": "^8.16.3",
        "pino": "^9.7.0",
        "pino-pretty": "^13.0.0",
        "zod": "^3.25.75"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@types/bcrypt": "^6.0.0",
        "@types/node": "^22.15.17",
        "@vitest/coverage-v8": "^3.2.4",
        "cross-env": "^7.0.3",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "vitest": "^3.1.2",
        "zod": "^3.25.75"
    }
}
